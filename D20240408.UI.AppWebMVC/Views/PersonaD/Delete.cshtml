@model D20240408.EntidadesDeNegocio.PersonaD

@{
    ViewData["Title"] = "Eliminar";
}

<h1>Eliminar</h1>

<h3>¿Seguro que quieres eliminar este registro?</h3>
<div>
    <h4>Persona</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NombreD)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NombreD)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ApellidoD)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ApellidoD)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FechaNacimientoD)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FechaNacimientoD)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.SueldoD)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SueldoD)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.EstatusD)
        </dt>
        <dd class = "col-sm-10">
            @if(Model.EstatusD == 0)
            {
                <span>Activo</span>
            }
            else
            {
                <span>Inactivo</span>
            }
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ComentarioD)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ComentarioD)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-action="Index">Cancelar</a>
    </form>
</div>
