@model D20240408.EntidadesDeNegocio.PersonaD

@{
    ViewData["Title"] = "Editar";
}

<h1>Editar</h1>

<h4>Persona</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div hidden class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NombreD" class="control-label"></label>
                <input asp-for="NombreD" class="form-control" />
                <span asp-validation-for="NombreD" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ApellidoD" class="control-label"></label>
                <input asp-for="ApellidoD" class="form-control" />
                <span asp-validation-for="ApellidoD" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaNacimientoD" class="control-label"></label>
                <input asp-for="FechaNacimientoD" class="form-control" />
                <span asp-validation-for="FechaNacimientoD" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SueldoD" class="control-label"></label>
                <input asp-for="SueldoD" class="form-control" />
                <span asp-validation-for="SueldoD" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EstatusD" class="control-label"></label>
                <select asp-for="EstatusD" class="form-control">
                    <option value="0">Activo</option>
                    <option value="1">Inactivo</option>
                </select>
                <span asp-validation-for="EstatusD" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ComentarioD" class="control-label"></label>
                <input asp-for="ComentarioD" class="form-control" />
                <span asp-validation-for="ComentarioD" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Cancelar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
